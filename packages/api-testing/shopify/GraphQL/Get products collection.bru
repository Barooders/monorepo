meta {
  name: Get products collection
  type: graphql
  seq: 10
}

post {
  url: {{shopifyShop}}/admin/api/2023-01/graphql.json
  body: graphql
  auth: none
}

headers {
  Content-Type: application/json
  X-Shopify-Access-Token: {{shopifyAdminGqlAcessToken}}
}

body:graphql {
  query fetchProductCollection($productId: ID!) {
              product (id: $productId) {
                collections(first: 30) {
                  nodes {
                    id
                  }
                }
              }
            }
}

body:graphql:vars {
  {
    "productId": "gid://shopify/Product/8660097368397"
  }
}
